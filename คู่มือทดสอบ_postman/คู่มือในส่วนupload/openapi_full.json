            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "period_id": {
                    "type": "integer"
                  },
                  "indicator_id": {
                    "type": "integer"
                  },
                  "evidence_type_id": {
                    "type": "integer"
                  },
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [
                  "period_id",
                  "indicator_id",
                  "evidence_type_id",
                  "file"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
