{
  "openapi": "3.0.3",
  "info": {
    "title": "A5 Full Backend API",
    "version": "1.0.0",
    "description": "Consolidated OpenAPI for A5 backend (auth, users, assignments, results, reports, upload)."
  },
  "servers": [
    {
      "url": "http://localhost:7000"
    }
  ],
  "tags": [
    {
      "name": "auth"
    },
    {
      "name": "users"
    },
    {
      "name": "assignments"
    },
    {
      "name": "results"
    },
    {
      "name": "reports"
    },
    {
      "name": "upload"
    },
    {
      "name": "health"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ApiResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "name_th": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "admin",
              "evaluator",
              "evaluatee"
            ]
          },
          "status": {
            "type": "string",
            "enum": [
              "active",
              "disabled"
            ]
          },
          "department_id": {
            "type": [
              "integer",
              "null"
            ]
          },
          "org_group_id": {
            "type": [
              "integer",
              "null"
            ]
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "AuthLoginRequest": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        }
      },
      "AuthLoginResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "token": {
            "type": "string"
          },
          "user": {
            "$ref": "#/components/schemas/User"
          }
        }
      },
      "Assignment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "period_id": {
            "type": "integer"
          },
          "evaluator_id": {
            "type": "integer"
          },
          "evaluatee_id": {
            "type": "integer"
          },
          "dept_id": {
            "type": [
              "integer",
              "null"
            ]
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Result": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "period_id": {
            "type": "integer"
          },
          "evaluatee_id": {
            "type": "integer"
          },
          "evaluator_id": {
            "type": "integer"
          },
          "topic_id": {
            "type": "integer"
          },
          "indicator_id": {
            "type": "integer"
          },
          "score": {
            "type": [
              "number",
              "null"
            ]
          },
          "value_yes_no": {
            "type": [
              "integer",
              "null"
            ]
          },
          "notes": {
            "type": [
              "string",
              "null"
            ]
          },
          "status": {
            "type": "string",
            "enum": [
              "draft",
              "submitted"
            ]
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Attachment": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "period_id": {
            "type": "integer"
          },
          "evaluatee_id": {
            "type": "integer"
          },
          "indicator_id": {
            "type": "integer"
          },
          "evidence_type_id": {
            "type": "integer"
          },
          "file_name": {
            "type": "string"
          },
          "mime_type": {
            "type": "string"
          },
          "size_bytes": {
            "type": "integer"
          },
          "storage_path": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": [
          "health"
        ],
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Login and get JWT",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthLoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthLoginResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
